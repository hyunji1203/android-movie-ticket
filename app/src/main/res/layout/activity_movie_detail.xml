<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/begin_guide"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guide"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="591dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/count">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detail_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="340dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="28dp"
                android:text="aafddsa"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_image" />

            <TextView
                android:id="@+id/detail_date_text"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="34dp"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical|left"
                android:text="상영일:"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_title" />

            <TextView
                android:id="@+id/detail_date"
                android:layout_width="86dp"
                android:layout_height="19dp"
                android:layout_marginTop="34dp"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/detail_date_text"
                app:layout_constraintTop_toBottomOf="@id/detail_title" />

            <TextView
                android:id="@+id/detail_time_text"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:text="러닝타임:"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical|left"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_date_text" />

            <TextView
                android:id="@+id/detail_time"
                android:layout_width="82dp"
                android:layout_height="19dp"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/detail_time_text"
                app:layout_constraintTop_toBottomOf="@id/detail_date" />

            <TextView
                android:id="@+id/description"
                android:text="sajhaljsflkjlakjaldfjkj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="38.87dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_date_text"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/minus"
        android:layout_width="65dp"
        android:layout_height="41dp"
        android:layout_marginBottom="83.67dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/begin_guide" />

    <Button
        android:id="@+id/plus"
        android:layout_width="65dp"
        android:layout_height="41dp"
        android:layout_marginBottom="83.67dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/end_guide" />

    <TextView
        android:id="@+id/count"
        android:layout_width="189dp"
        android:layout_height="33dp"
        android:layout_marginBottom="88.35dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/begin_guide"
        app:layout_constraintEnd_toStartOf="@id/end_guide" />


    <Button
        android:id="@+id/reservation_confirm"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginBottom="19.92dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/end_guide"
        app:layout_constraintStart_toEndOf="@id/begin_guide" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selection.SeatSelectActivity"
    android:background="#EAEAEA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="58dp"
        android:background="#494949"
        android:id="@+id/constraintLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/screen"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="97dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="97dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            android:textSize="22sp"
            android:text="SCREEN"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="5dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/seat_table">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="A1"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#8E13EF"
                android:background="#FFFFFF" />

            <Button
                android:text="A2"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#8E13EF"
                android:background="#FFFFFF" />

            <Button
                android:text="A3"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#8E13EF"
                android:background="#FFFFFF" />

            <Button
                android:text="A4"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#8E13EF"
                android:background="#FFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="B1"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#8E13EF"
                android:background="#FFFFFF" />

            <Button
                android:text="B2"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#8E13EF"
                android:background="#FFFFFF" />

            <Button
                android:text="B3"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#8E13EF"
                android:background="#FFFFFF" />

            <Button
                android:text="B4"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#8E13EF"
                android:background="#FFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="C1"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#19D358"
                android:background="#FFFFFF" />

            <Button
                android:text="C2"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#19D358"
                android:background="#FFFFFF" />

            <Button
                android:text="C3"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#19D358"
                android:background="#FFFFFF" />

            <Button
                android:text="C4"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#19D358"
                android:background="#FFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="D1"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#19D358"
                android:background="#FFFFFF" />

            <Button
                android:text="D2"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#19D358"
                android:background="#FFFFFF" />

            <Button
                android:text="D3"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#19D358"
                android:background="#FFFFFF" />

            <Button
                android:text="D4"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#19D358"
                android:background="#FFFFFF" />

        </TableRow>

        <TableRow>

            <Button
                android:text="B1"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1B48E9"
                android:background="#FFFFFF" />

            <Button
                android:text="B2"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1B48E9"
                android:background="#FFFFFF" />

            <Button
                android:text="B3"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1B48E9"
                android:background="#FFFFFF" />

            <Button
                android:text="B4"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1B48E9"
                android:background="#FFFFFF" />
        </TableRow>

    </TableLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seat_table"
        android:layout_marginTop="100dp"
        android:background="#FFFFFF"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            tools:text="슬램덩크 마지막 승부"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_money"
            android:textSize="18sp"
            tools:text="10000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/select_title"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:text="원"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/select_money"
            app:layout_constraintTop_toBottomOf="@+id/select_title" />

        <Button
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/select_confrim_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:enabled="false"
            android:background="#6200EE" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

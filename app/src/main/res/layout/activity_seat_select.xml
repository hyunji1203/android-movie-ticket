<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selection.SeatSelectActivity"
    android:background="#EAEAEA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="#494949"
        android:id="@+id/constraintLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/screen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            android:textSize="22sp"
            android:text="@string/screen"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="5dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/seat_table">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="@string/a1"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#8E13EF"
                android:background="#FFFFFF"
                android:id="@+id/a1" />

            <Button
                android:text="@string/a2"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#8E13EF"
                android:background="#FFFFFF" />

            <Button
                android:text="@string/a3"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#8E13EF"
                android:background="#FFFFFF" />

            <Button
                android:text="@string/a4"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#8E13EF"
                android:background="#FFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="@string/b1"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#8E13EF"
                android:background="#FFFFFF" />

            <Button
                android:text="@string/b2"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#8E13EF"
                android:background="#FFFFFF" />

            <Button
                android:text="@string/b3"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#8E13EF"
                android:background="#FFFFFF" />

            <Button
                android:text="@string/b4"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#8E13EF"
                android:background="#FFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="@string/c1"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#19D358"
                android:background="#FFFFFF" />

            <Button
                android:text="@string/c2"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#19D358"
                android:background="#FFFFFF" />

            <Button
                android:text="@string/c3"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#19D358"
                android:background="#FFFFFF" />

            <Button
                android:text="@string/c4"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#19D358"
                android:background="#FFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="@string/d1"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#19D358"
                android:background="#FFFFFF" />

            <Button
                android:text="@string/d2"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#19D358"
                android:background="#FFFFFF" />

            <Button
                android:text="@string/d3"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#19D358"
                android:background="#FFFFFF" />

            <Button
                android:text="@string/d4"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#19D358"
                android:background="#FFFFFF" />

        </TableRow>

        <TableRow>

            <Button
                android:text="@string/e1"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1B48E9"
                android:background="#FFFFFF" />

            <Button
                android:text="@string/e2"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1B48E9"
                android:background="#FFFFFF" />

            <Button
                android:text="@string/e3"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1B48E9"
                android:background="#FFFFFF" />

            <Button
                android:text="@string/e4"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1B48E9"
                android:background="#FFFFFF" />
        </TableRow>

    </TableLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seat_table"
        android:layout_marginTop="100dp"
        android:background="#FFFFFF"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            tools:text="슬램덩크 마지막 승부"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4" />

        <TextView
            android:text="@string/seatDefaultMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_money"
            android:textSize="18sp"
            tools:text="10000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/select_title"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:text="@string/won"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/select_money"
            app:layout_constraintTop_toBottomOf="@+id/select_title" />

        <Button
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/select_confrim_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:enabled="false"
            android:background="#6200EE" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
